# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pumpportal
DB_USER=postgres
DB_PASSWORD=postgres

# WebSocket API配置
WEBSOCKET_URI=wss://pumpportal.fun/api/data

# 日志配置
# 可选值: DEBUG, INFO, WARNING, ERROR, CRITICAL
# 使用DEBUG级别可以查看更详细的日志输出
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_FILE=pump_portal.log
LOG_ERROR_FILE=pump_portal_error.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_TO_FILE=true

# API服务器配置
API_HOST=0.0.0.0
API_PORT=8000
API_ENABLE_CORS=true
API_CORS_ORIGINS=*
API_ALLOWED_METHODS=GET,POST,OPTIONS
API_ALLOWED_HEADERS=*
API_ALLOW_CREDENTIALS=true
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_TITLE=Pump Data API
API_DESCRIPTION=提供代币数据访问的API接口
API_VERSION=1.0.0

# HTTP代理配置
HTTP_PROXY=
HTTPS_PROXY=
PROXY_ENABLED=false
HTTP_TIMEOUT=30
HTTP_VERIFY_SSL=true

# 事件类型监听设置
# 设置为true启用WebSocket监听服务
LISTEN_NEW_TOKEN=true
LISTEN_MIGRATION=true
QUIET_MODE=false

# 监听的账户和代币列表，以逗号分隔
WATCH_ACCOUNTS=
WATCH_TOKENS=

# 代币回复数据采集配置
# 设置为true启用定时数据采集
TOKEN_REPLIES_ENABLED=true
# 定时采集间隔，单位：秒（300秒=5分钟）
TOKEN_REPLIES_INTERVAL=300
# 筛选SOL阈值，只采集SOL值大于此阈值的代币
TOKEN_REPLIES_SOL_THRESHOLD=35.0
# 每次API请求的数据量限制
TOKEN_REPLIES_FETCH_LIMIT=1000
# API访问所需的Cookie，用于身份验证
TOKEN_REPLIES_COOKIE= 